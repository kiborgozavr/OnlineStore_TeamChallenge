<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add_columns_to_address" author="Oleksandr Bogdanets">
        <addColumn tableName="addresses">
            <column name="street" type="VARCHAR(255)" />
            <column name="house_number" type="VARCHAR(255)" />
            <column name="flat_number" type="VARCHAR(255)" />
            <column name="department_number" type="VARCHAR(255)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>